<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/quick_text_background"
            android:paddingStart="@dimen/quick_text_top_padding"
            android:paddingTop="@dimen/quick_text_top_padding"
            android:paddingEnd="@dimen/quick_text_top_padding"
            android:paddingBottom="@dimen/quick_text_bottom_padding"
            android:text="@string/meal_budget_heading"
            android:textColor="@color/color_text_header"
            android:textSize="@dimen/heading_text_size"
            android:textStyle="normal|bold"
            app:drawableRightCompat="@drawable/ic_navigate_right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:paddingStart="@dimen/quick_text_top_padding"
            android:paddingTop="@dimen/quick_text_top_padding"
            android:paddingEnd="@dimen/quick_text_top_padding"
            android:paddingBottom="@dimen/quick_text_bottom_padding"
            android:text="@string/meal_budget_text"
            android:textColor="@color/meal_body_text"
            android:textSize="@dimen/meal_budget_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
